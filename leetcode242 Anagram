package main
 
import (
"fmt"
)
 
func main(){
     s := "anagram"
     t := "nagaram"
	 var result bool
     result = isAnagram(s,t) 
     fmt.Println("%t",result)
}


/**
 * decide it is whether a Anagram
 *
 * @param string s
 * @param string t
 * @return bool
 
 * @private
 */

func isAnagram(s string, t string) bool {
	a := [26]int{}
	b := [26]int{}

	for _, v := range s {
		a[v-'a'] ++
	}

	for _, v := range t {
		b[v-'a'] ++
	}
	return a == b
}

